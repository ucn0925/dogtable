<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "新しいパスワード（変更する場合のみ）" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br>
      <em><%= @minimum_password_length %>文字以上入力してください</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード（確認のため必須）" %><br>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :profile, "自己紹介" %><br>
    <%= f.text_area :profile, row: 5 %>
  </div>

  <div class="field">
    <%= f.label :profile_image, "プロフィール画像" %><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <h3>愛犬情報</h3>

  <% resource.build_dog if resource.dog.nil? %>
  <%= f.fields_for :dog do |d| %>
    <div class="field">
      <%= d.label :name, "犬の名前" %><br>
      <%= d.text_field :name %>
    </div>

    <div class="field">
      <%= d.label :breed, "犬種" %><br>
      <%= d.text_field :breed %>
    </div>

    <div class="field">
      <%= d.label :size, "犬のサイズ" %><br>
      <%= d.select :size, Dog.size_options %>
    </div>

    <div class="field">
      <%= d.label :dog_image, "犬の写真" %><br>
      <%= d.file_field :dog_image, include_hidden: false %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>アカウント削除</h3>
<div>
  <%= button_to "アカウントを削除する", registration_path(resource_name), 
    data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" },
    method: :delete, class: "btn-danger" %>
</div>

<%= link_to "戻る", mypage_path, class: "btn-back" %>
